<view class='article-container' bindtap='onJumpTap'>
  <view class='article-author-date'>
    <image src='{{avatar}}' class='article-author'></image>
    <text class='article-date'>{{date}}</text>
  </view>
  <text class='article-title'>{{title}}</text>
  <image src='{{imgSrc}}' class='article-image'></image>
  <text class='article-content'>
    {{brief}}
  </text>
  <view class='article-like'>
    <image class='article-like-image' src='/images/icon/chat.png'></image>
    <text class='article-like-font'>{{collection}}</text>
    <image class='article-like-image' src='/images/icon/view.png'></image>
    <text class='article-like-font'>{{reading}}</text>
  </view>
</view>