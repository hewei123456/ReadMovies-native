.article-container {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.article-author-date {
  margin: 10rpx 0 20rpx 10px;
}

.article-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.article-date {
  margin-left: 20rpx;
  margin-bottom: 10px;
  font-size: 26rpx;
  vertical-align: middle;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.article-image {
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.article-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.article-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.article-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.article-like-font {
  vertical-align: middle;
  margin-right: 20px;
}