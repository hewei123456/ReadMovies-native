page {
  background-color: #f2f2f2;
}

.search {
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.movies-template {
  margin-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  background-color: white;
}

.movie-head {
  width: 710rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}

.slogan {
  font-size: 24rpx;
}

.more-text {
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
}
